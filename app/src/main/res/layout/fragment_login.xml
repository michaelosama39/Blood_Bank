<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".view.fragment.authCycle.LoginFragment">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:src="@drawable/login"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/login_phone_ET"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="الجوال"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:background="@drawable/carve_gray"
        android:layout_below="@id/imageView4"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/login_password_ET"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="كلمه المرور"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:inputType="textPassword"
        android:background="@drawable/carve_gray"
        android:layout_below="@id/login_phone_ET"
        android:layout_margin="20dp"/>

    <CheckBox
        android:id="@+id/login_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تذكرني"
        android:layout_below="@id/login_password_ET"
        android:layout_marginStart="270dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/login_forget_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هل نسيت كلمه السر "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_below="@id/login_password_ET"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/login_enter_BTN"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="دخول"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="22sp"
        android:background="@drawable/carve_gray"
        android:layout_below="@id/login_forget_TV"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/login_newAccount_TV"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="لا تمتلك حساب ؟ يمكنك التسجيل من هنا "
        android:textColor="@color/red"
        android:textSize="20dp"
        android:background="@color/gray"
        android:layout_below="@+id/login_enter_BTN"
        android:gravity="center"
        android:layout_marginTop="118dp"/>

</RelativeLayout>