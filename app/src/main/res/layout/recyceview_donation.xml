<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-70dp"
            android:layout_weight="1">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="140dp"
                    app:srcCompat="@drawable/circle"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/recyclerDonation_type_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B+"
                    android:textSize="70sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="30dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="18dp">

                        <Button
                            android:id="@+id/recyclerDonation_call"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/ic_call_orange_24dp"
                            />

                        <Button
                            android:id="@+id/recyclerDonation_about"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/ic_about_black_24dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="18dp">

                        <TextView
                            android:id="@+id/recyclerDonation_name"
                            style="@style/textview"
                            android:layout_width="281dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="200dp"
                            android:text="اسم الحاله: محمد محروس "
                            android:textSize="20dp"/>

                        <TextView
                            android:id="@+id/recyclerDonation_hospital"
                            style="@style/textview"
                            android:layout_width="281dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="200dp"
                            android:text="اسم الحاله: محمد محروس "
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/recyclerDonation_adress"
                            style="@style/textview"
                            android:layout_width="281dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="200dp"
                            android:text="اسم الحاله: محمد محروس "
                            android:textSize="20dp" />

                </LinearLayout>

        </LinearLayout>

</RelativeLayout>