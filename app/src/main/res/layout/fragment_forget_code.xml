<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".view.fragment.authCycle.ForgetCodeFragment">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:src="@drawable/login"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/forget_code_ET"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/imageView5"
        android:layout_margin="20dp"
        android:background="@drawable/carve_gray"
        android:hint="كود التحقيق"
        android:textColor="@color/red"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/forget_password_ET"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/forget_code_ET"
        android:layout_margin="20dp"
        android:background="@drawable/carve_gray"
        android:hint="كلمه المرور الجديده"
        android:textColor="@color/red"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/forget_passwordCheck_ET"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/forget_password_ET"
        android:layout_margin="20dp"
        android:background="@drawable/carve_gray"
        android:hint=" تاكيد كلمه المرور الجديده"
        android:textColor="@color/red"
        android:textSize="20sp" />

    <Button
        android:id="@+id/forget_phone_BTN"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="دخول"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="22sp"
        android:background="@drawable/carve_gray"
        android:layout_below="@id/forget_passwordCheck_ET"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>